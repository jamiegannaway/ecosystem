        49: { row: 1, col: 14 }, 50: { row: 2, col: 14 }, 56: { row: 3, col: 14 }, 62: { row: 4, col: 14 }, 72: { row: 5, col: 14 },
        51: { row: 1, col: 15 }, 52: { row: 2, col: 15 }, 57: { row: 3, col: 15 }, 63: { row: 4, col: 15 }, 73: { row: 5, col: 15 },
